<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/search_fra_titlebar_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7f00"
        android:orientation="horizontal" >

        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/back_sele"/>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/search_fragment_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_edit_bg"
            android:hint="歌手/歌曲/专辑/歌单/MV"
            android:textSize="13sp"
            android:paddingLeft="35dp" />
        <ImageView
            android:id="@+id/search_fragment_clearedit_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:clickable="true"
            android:visibility="gone"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_clear_edit"/>
	</RelativeLayout>
        <ImageView
            android:id="@+id/tab_main_fra_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/selector_main_head_search" />
    </LinearLayout>
    
   <!--  <zrc.widget.ZrcListView
        android:id="@+id/search_fra_zrclistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/> -->
        <LinearLayout
            android:id="@+id/search_fragment_content" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"></LinearLayout>

</LinearLayout>